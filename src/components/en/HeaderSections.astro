      <!-- Logo -->
      <a href="/" class="flex items-center">
       
        <Image
          id="logon"
          src={logoNegroDowntown}
          alt="Hotel Downtown"
          class="lg:w-[160px] lg:h-[150px] md:w-[270px] md:h-[75px] h-[140px] w-[120px]"
        />
      </a>
