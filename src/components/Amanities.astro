        <Image
          class="w-[200px] lg:w-[240px] order-2 sm:order-1"
          src={LogoVentanita}
          alt="La Ventanita de María Bonita"
        />
        <a
          target="_blank"
          rel="noopener noreferrer"
          class="text-center text-fondo text-base sm:text-xl font-semibold font-['Montserrat']"
          href="https://online.flippingbook.com/view/179568887/"
        >
          <button
            class="h-11 w-52 lg:mt-10 mt-10 rounded-[20px] bg-botones hover:bg-red-700 justify-center items-center inline-flex order-first sm:order-last"
          >
            Menú
