---
import { Image } from "astro:assets";
import fondoTours from "../assets/Rafting.jpg";
---

<div id="infoPaquetes" class="relative flex w-full h-[300px] md:h-[400px] lg:h-[400px]">
  <Image
    src={fondoTours}
    alt="Jaguar en la selva"
    class="w-full h-full object-cover bg-fixed"
  />

  <div
    class="absolute inset-0 flex flex-col items-center justify-center text-center text-white bg-black bg-opacity-30 "
  >
    <p class="text-4xl md:text-1xl leading-relaxed">Visita La Fortuna</p>
    <h2 class="text-2xl md:text-4xl font-bold leading-relaxed">
      ¡Tu próxima aventura comienza aquí!
    </h2>
    <a
      target="_blank"
      rel="noopener noreferrer"
      href="https://online.flippingbook.com/view/743187584/"
      class="mt-4 px-6 py-3 bg-botones hover:bg-red-700 text-white font-bold rounded-2xl"
    >
      Ver tours
    </a>
  </div>
</div>
